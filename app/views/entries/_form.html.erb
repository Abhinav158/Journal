<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mt-4">
      <%= form_with model: entry, class: "mt-4" do |form| %>
        <div class="form-group mb-4">
          <%= form.label :date, class: "form-label" %>
          <%= form.date_field :date, class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :highlight, class: "form-label" %>
          <%= form.text_field :highlight, class: "form-control" %>
          <% entry.errors.full_messages_for(:highlight).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :weight, class: "form-label" %>
          <%= form.number_field :weight, step: 0.1, class: "form-control" %>
          <% entry.errors.full_messages_for(:weight).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :notes, class: "form-label" %>
          <%= form.text_area :notes, class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= form.submit "Submit", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
