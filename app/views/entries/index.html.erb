<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mt-5 mb-4">Abhinav's Journal</h1>
      <h1 class="mt-5"><%= Date.today.strftime("%B %Y") %></h1>
      <h3 class="mt-4"><%= link_to "New Entry", new_entry_path, class: "btn btn-primary" %></h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Day</th>
            <th>Highlight</th>
            <th>Weight</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @entries.each do |entry| %>
            <tr>
              <td><%= entry.date.strftime("%d") %></td>
              <td><%= entry.highlight %></td>
              <td><%= entry.weight %></td>
              <td>
                <%= link_to "Edit", edit_entry_path(entry), class: "btn btn-primary btn-sm" %>
                <%= link_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this entry?" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
